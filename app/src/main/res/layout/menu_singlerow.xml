<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:elevation="4dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/itemImg"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:scaleType="centerCrop"
            android:src="@drawable/biryani" />

        <LinearLayout
            android:id="@+id/desc"
            android:layout_width="155dp"
            android:layout_height="125dp"
            android:layout_toRightOf="@+id/itemImg"
            android:orientation="vertical">

            <TextView
                android:id="@+id/row_nametv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp"
                android:text="Biryani"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="italic" />
            <LinearLayout
                android:layout_width="155dp"
                android:layout_height="37dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/rating"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"/>
                <TextView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:text="5"
                    android:id="@+id/dashRating"
                    android:textSize="16sp"
                    android:layout_marginTop="5dp"/>
            <TextView
                android:id="@+id/priceDash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="5dp"
                android:text="â‚¹240"
                android:textSize="15sp"
                android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@+id/desc"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="left">

                <ImageView
                    android:layout_width="10dp"
                    android:id="@+id/itemTypeImg"
                    android:layout_marginTop="15dp"
                    android:layout_height="10dp"
                    android:src="@drawable/leaf"/>
                <TextView
                    android:id="@+id/typeDesc"
                    android:layout_marginLeft="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Veg"
                    android:textColor="#10A698"
                    android:textSize="11dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/decBtn"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/minus"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/cartTv"
                    android:layout_width="27dp"
                    android:layout_height="35dp"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/incBtn"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/add"
                    android:textColor="@color/black"
                    android:textSize="25dp" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>


</androidx.cardview.widget.CardView>